            </MudNavGroup>

            <MudNavGroup Icon="@Icons.Material.Filled.Group" Title="Pessoas" @bind-Expanded=_isExpanded_pessoas>
                <MudNavLink Href="/users">Users</MudNavLink>
                <MudNavLink Href="/security">Security</MudNavLink>
            </MudNavGroup>

            <MudNavGroup Icon="@Icons.Material.Filled.FireTruck" Title="Fornecedores" @bind-Expanded=_isExpanded_fornecedores>
                <MudNavLink Href="/users">Users</MudNavLink>
                <MudNavLink Href="/security">Security</MudNavLink>
            </MudNavGroup>

            <MudNavGroup Icon="@Icons.Material.Filled.Payments" Title="Financeiro" @bind-Expanded=_isExpanded_settings>
                 <MudNavLink Href="/caixa">Caixa</MudNavLink>
                 <MudNavLink Href="/conta_apagar">Contas a Pagar</MudNavLink>
                <MudNavLink Href="/conta_areceber">Contas a Receber</MudNavLink>
                <MudNavLink Href="/conta_categorias">Contas Categorias</MudNavLink>
            </MudNavGroup>

            <MudNavGroup Icon="@Icons.Material.Filled.Settings" Title="Configurações" @bind-Expanded=_isExpanded_settings>
                <MudNavLink Href="/payments">Maquininha</MudNavLink>
                <MudNavLink Href="/notafiscal">Nota Fiscal</MudNavLink>
                <MudNavLink Href="/hadwares">outras</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>



@code
{
    bool _isExpanded_vendas = false;
    bool _isExpanded_produtos =false;
    bool _isExpanded_pessoas = false;
