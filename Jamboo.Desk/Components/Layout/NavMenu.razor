@using MudBlazor

 
        <MudNavMenu>
    <MudNavGroup Icon="@Icons.Material.Filled.ShoppingBag" Title="Home" @bind-Expanded=_isExpanded_home>
        <MudNavLink Href="/">Relatorios</MudNavLink>
    </MudNavGroup>
            <MudNavGroup  Icon="@Icons.Material.Filled.ShoppingBag" Title="Vendas" @bind-Expanded=_isExpanded_vendas>
